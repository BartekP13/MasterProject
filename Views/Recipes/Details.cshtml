@model MasterProject.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<div>

    <div>
        <form asp-controller="Recipes" asp-action="Index" method="get">
            <button type="submit" class="btn btn-primary">Powrót</button>
        </form>
    </div>

    <h1>@Html.DisplayFor(model => model.Name)</h1>

    <div>
        <img src="@Model.ImageUrl" alt="Zdjecie przepisu" class="img-fluid mx-auto d-block" style="width: 750px; height: 750px;">
    </div>

    <div style="text-align: right;">
        @if (ViewBag.UserRating != null)
        {
            <p>Twoja ocena: @ViewBag.UserRating</p>
        }
        else
        {
        <form asp-controller="Recipes" asp-action="AddRating" method="post">
            <input type="hidden" name="recipeId" value="@Model.Id" />

            <label>Oceń przepis (1-5):</label>
            <button type="submit" name="ratingValue" value="1">1</button>
            <button type="submit" name="ratingValue" value="2">2</button>
            <button type="submit" name="ratingValue" value="3">3</button>
            <button type="submit" name="ratingValue" value="4">4</button>
            <button type="submit" name="ratingValue" value="5">5</button>
        </form>
        }
        <p>Średnia ocena: @ViewBag.AverageRating.ToString("0.0")</p>
    </div>

    <div>
        <h4>Szczegóły</h4>
        <hr />
        <div class="row">
            <div class="col-sm-6">
                <dl style="display: grid; grid-template-columns: auto 1fr; gap: 10px;">
                    <dt>Nazwa:</dt>
                    <dd>@Html.DisplayFor(model => model.Name)</dd>

                    <dt>Kalorie:</dt>
                    <dd>@Html.DisplayFor(model => model.Kcal)</dd>

                    <dt>Węglowodany:</dt>
                    <dd>@Html.DisplayFor(model => model.Carbohydrates)</dd>

                    <dt>Tłuszcze:</dt>
                    <dd>@Html.DisplayFor(model => model.Fat)</dd>

                    <dt>Błonnik:</dt>
                    <dd>@Html.DisplayFor(model => model.Fiber)</dd>

                    <dt>Białko:</dt>
                    <dd>@Html.DisplayFor(model => model.Protein)</dd>
                </dl>
            </div>



            <div class="col-sm-6">
                <dl>
                    <dt>Składniki</dt>
                    <dd>
                        <ul>
                            @foreach (var ingredient in Model.Ingredients)
                            {
                                <li>@ingredient.IngredientNames.Name - @ingredient.Quantity</li>
                            }
                        </ul>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<dt class="col-sm-2">Tagi</dt>
<dd class="col-sm-10">
    @{
        var tagCount = ViewBag.TagNames.Count;
    }
    <span>
        @foreach (var tagName in ViewBag.TagNames)
        {
            @tagName
            @if (--tagCount > 0)
            {
                @Html.Raw("  |  ")
            }
        }
    </span>
</dd>

<hr />

<h3>Podobne przepisy</h3>
<div class="row">
    @foreach (var similarRecipe in ViewBag.SimilarRecipes)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@similarRecipe.ImageUrl" class="card-img-top" alt="@similarRecipe.Name">
                <div class="card-body">
                    <h5 class="card-title">@similarRecipe.Name</h5>
                    <a href="@Url.Action("Details", new { id = similarRecipe.Id })" class="btn btn-primary">Szczegóły</a>
                </div>
            </div>
        </div>
    }
</div>
